@using System.Web.Optimization
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap -->
    @Styles.Render("~/Content/bootstrap")
    <!-- JQ ui bootstrap style-->
    @Styles.Render("~/Content/jquibootstrap")
    <!-- Bootstrap datetimepicker-->
    @Styles.Render("~/Content/datetimepicker")
    <!-- Select2 css-->
    @Styles.Render("~/Content/select2")
    <!-- Site css-->
    @Styles.Render("~/Content/site")
    <script>
        var Today = "@(DateTime.Now.ToShortDateString())";
    </script>
</head>
<body style="background-color: #979797">
    <!-- Begin page content -->
    <div class="container img-rounded" style="background-color: white">
        @RenderBody()
    </div>
    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
    <!-- jQuery ui -->
    @Scripts.Render("~/bundles/jqueryui")
    <!-- jQuery validate -->
    @Scripts.Render("~/bundles/jqueryval")
    <!-- jQuery numbermask -->
    @Scripts.Render("~/bundles/inputmask")
    <!-- Bootstrap -->
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Select2 -->
    @Scripts.Render("~/bundles/select2")
    <!-- JQ UI datetimepicker ru localizarion -->
    @Scripts.Render("~/bundles/datepicker_ru")
    @Scripts.Render("~/bundles/formsetup")
    @RenderSection("scripts", false)
</body>
</html>