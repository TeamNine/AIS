@using System.Web.Optimization
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap -->
    @Styles.Render("~/Content/bootstrap")
    <!-- JQ ui bootstrap style-->
    @Styles.Render("~/Content/jquibootstrap")
    <!-- Bootstrap datetimepicker-->
    @Styles.Render("~/Content/datetimepicker")
    <!-- Select2 css-->
    @Styles.Render("~/Content/select2")
    <!-- Site css-->
    @Styles.Render("~/Content/site")
    <script>
        var Today = "@(DateTime.Now.ToShortDateString())"; //"16.03.2015"//
    </script>
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <p class="navbar-brand">AIS</p>
            </div>
        </div>
    </nav>

    <!-- Begin page content -->
    <div class="container" style="background-color: azure">
        <div class="page-header" style="margin: 0">
            <h1>AIS</h1>
        </div>
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer navbar-inverse">
        <div class="container">
            <p class="text-muted">2015</p>
        </div>
    </footer>
    
    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
    <!-- jQuery ui -->
    @Scripts.Render("~/bundles/jqueryui")
    <!-- jQuery validate -->
    @Scripts.Render("~/bundles/jqueryval")
    <!-- jQuery numbermask -->
    @Scripts.Render("~/bundles/inputmask")
    <!-- Bootstrap -->
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Select2 -->
    @Scripts.Render("~/bundles/select2")
    <!-- JQ UI datetimepicker ru localizarion -->
    @Scripts.Render("~/bundles/datepicker_ru")
    @Scripts.Render("~/bundles/formsetup")
    @RenderSection("scripts", false)
</body>
</html>